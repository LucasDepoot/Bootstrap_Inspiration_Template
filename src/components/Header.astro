<style>
    section{
        padding:0.5rem 0.5rem 0;
        text-align: center;
        background: var(--color-background-linear);
    }
    h1{
        font-size: 2rem;
        margin: 2rem 0 1rem;
    }
    span{
        color: var(--color-text-light);
    }
    p{
        padding: 0.5rem;
        color: var(--color-text-light);
        margin: 0.5rem 0;
        text-align: left;
    }
    .cta-container{
        display: flex;
        flex-direction: column;
        align-items: center;
    }
    svg{
        width: 40px;
        margin-right: 0.5rem;
    }
    #mail{
        width: 30px;
    }
    a{
        display: flex;
        align-items: center;
        padding: 0.5rem 1rem;
        margin: 0.5rem;
        border: 1px solid var(--color-text-light);
        border-radius: var(--border-radius);
        width: 195px;
        font-size: 1.2rem;
    }
    .cta-contact{
        color: var(--color-text-light);
    }
    .cta-service{
        background: var(--color-text-light);
    }
    img{
        aspect-ratio: 0.6667;
        height: 350px;
        position: relative;
        bottom:var(--position-small);
        left: 3.5rem;
    }

    @media(min-width:870px){
        section{
            padding: 1.5rem 5rem;
            text-align: inherit;
        }
        .container{
            display: flex;
            align-items: center; 
            justify-content: space-around;
        }
        h1{
            font-size: 2.8rem;
        }
        .cta-container{
            flex-direction: row;
        }
        p{
            padding: inherit;
            font-size: 1.4rem;
        }
        img{
            height: 450px;
            align-self: flex-end;
            position: relative;
            bottom: var(--position-medium);
            animation: move 0.6s ease-in;
        }
        .cta-contact:hover{
            color:var(--color-accent);
            border-color: var(--color-accent);
        }
        .cta-contact:hover svg{
            fill: var(--color-accent);
        }
        .cta-service:hover{
            background: var(--color-accent);
        }
        @keyframes move {
            from{
                transform:translateX(-100px);
                opacity: 0.6;
            }
            to {
                transform:translateX(0);
                opacity: 1;
            }
        }
    }

    @media(min-width:1200px){
        .container-text{
            margin-left: 10rem;
        }
        p{
            width: 60%;
        }
        img{
            height: inherit;
        }
        @keyframes move {
            from{
                transform:translateX(-200px);
                opacity: 0.6;
            }
            to {
                transform:translateX(0);
                opacity: 1;
            }
        }
    }
</style>